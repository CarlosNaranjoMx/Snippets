{
	// escapar parentesis y espacios
	// xargs para concatenar argumentos
	// remove arguments shift
	// guardar en variables y echo -n
	// /root/.profile

	//**************(Indice)**************//
	//**************([1]Start)**************//
	//**************([2]Basicos)**************//
	//**************([3]Acceso al Arreglo)**************//
	//**************([4]Comandos)**************//
	
	//**************([1]Start)**************//
	"start": {
		"prefix": "start", 
		"body": [
		"#!/bin/bash"
		]
	}
	//**************([2]basicos)**************//
	,"separator": {
		"prefix": "separator", 
		"body": [
		"###$2( $1 )$2###$3"
		]
	}
	,"idindice": {
		"prefix": "idindice", 
		"body": [
		"<div id='$1' />"
		]
	}
	,"for": {
		"prefix": "for", 
		"body": [
		"for i in `seq ${1:inicio} ${2:fin}`\ndo\n$3\ndone"
		]
	}
	,"while": {
		"prefix": "while", 
		"body": [
		"while [ $1 ];\r\ndo\r\n    $2;\r\ndone"
		]
	}
	,"aritmetic": {
		"prefix": "aritmetic", 
		"body": [
		"$(($1))"
		]
	}
	,"bash": {
		"prefix": "bash", 
		"body": [
		"$($1)"
		]
	}
	,"if": {
		"prefix": "if", 
		"body": [
		"if [ $1 ] then;\r\n    $2\r\nfi"
		]
	}
	,"function": {
		"prefix": "function", 
		"body": [
		"function $1 (){\n    $2\n}"
		]
	}
	// no use this type of notation :(
	// ,"function01": {
	// 	"prefix": "function01", 
	// 	"body": [
	// 	"function $1(){ $2 }"
	// 	]
	// }
	//**************(Concatenar cadenas)**************//
	//**************([3]Acceso al Arreglo)**************//
	//bash
	//declaracion nombre=()
	//en los for ${arr[*]}
	,"arreglo": {
		"prefix": "arreglo", 
		"body": [
		"#${1:nombre}[${2:indice}]"
		]
	}
	//**************([4]Comandos)**************//
	//mostrar los programas instalados
	,"dpkg": {
		"prefix": "dpkg", 
		"body": [
		"dpkg --list"
		]
	}
	//desinstalar un programa
	,"premove": {
		"prefix": "premove", 
		"body": [
		"sudo apt --purge remove ${1:name}"  
		]
	}

	//**************([5]Instalation-User)**************//
	,"pip3install--user": {
		"prefix": "pip3install--user", 
		"body": [
		"pip3 install --user ${1:meson}"
		]
	}

	//**************(Dir LInux)**************//
	//etc/enviroment - variables de entorno
	//opt - paquetes de instalacion 
	//usr/lib - paquetes de instalacion
}